# EditorConfig for Julia the Viper
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# Cargo files
[Cargo.toml]
indent_size = 4

[Cargo.lock]
indent_size = 4
insert_final_newline = false

# Markdown and AsciiDoc
[*.{md,adoc}]
trim_trailing_whitespace = false
max_line_length = 80

# YAML (GitHub Actions, CI configs)
[*.{yml,yaml}]
indent_size = 2

# TOML
[*.toml]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# JavaScript/TypeScript (for tooling only)
[*.{js,ts,jsx,tsx}]
indent_size = 2

# ReScript (future PWA)
[*.{res,resi}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Justfile
[Justfile]
indent_style = tab
indent_size = 4

# Nix
[*.nix]
indent_size = 2

# Scheme (machine-readable metadata)
[*.scm]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS
[*.css]
indent_size = 2

# Make (if any legacy Makefiles exist)
[Makefile]
indent_style = tab

# Git
[.gitattributes]
indent_size = 2

[.gitignore]
indent_size = 2

# GitHub
[.github/**/*.yml]
indent_size = 2
